<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto py-5">

      <form action="/restaurants" method="POST">

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">餐廳名稱</span>
          </div>
          <input type="text" class="form-control" placeholder="餐廳名稱" name="name">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">餐廳名稱 EN</span>
          </div>
          <input type="text" class="form-control" placeholder="餐廳名稱 EN" name="name_en">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">類別</span>
          </div>
          <input type="text" class="form-control" placeholder="餐廳類別" name="category">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">圖片</span>
          </div>
          <input type="text" class="form-control" placeholder="圖片網址" id="inputGroup-sizing-default" name="image">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">地址</span>
          </div>
          <input type="text" class="form-control" placeholder="餐廳地址" name="location">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">電話</span>
          </div>
          <input type="text" class="form-control" placeholder="電話號碼" name="phone">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Google Map</span>
          </div>
          <input type="text" class="form-control" placeholder="Google Map 連結" name="google_map">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">評分</span>
          </div>
          <input type="text" class="form-control" placeholder="網路評分" name="rating">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">說明</span>
          </div>
          <textarea class="form-control" placeholder="詳細說明" name="description"></textarea>
        </div>

        <div class="row mt-2 px-3 mb-5 justify-content-center">
          <a href="/" class="btn btn-primary btn-sm mr-2" role="button" aria-pressed="true">Back</a>
          <button type="submit" class="btn btn-success btn-sm mr-2">Create</button>
        </div>

      </form>

    </div>
  </div>
</div>